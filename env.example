# Database - PostgreSQL (recommended for dev and production)
DATABASE_URL="postgresql://username:password@localhost:5432/mythos_reply"

# Twitter API Credentials
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Twitter OAuth 2.0 (for real account connections)
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_key
NEXTAUTH_URL=http://localhost:3000

# JWT Secret
JWT_SECRET=your_jwt_secret_key

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# TwitterIO API Configuration (for analytics and search)
TWITTERIO_KEY=your_twitterio_api_key

# Theta EVM Testnet (TFUEL payments)
# TFUEL is the native gas/token used for simple payments (no contracts required)
THETA_TESTNET_RPC_URL=https://eth-rpc-api-testnet.thetatoken.org/rpc
# A 64-hex master seed used ONLY to deterministically derive per-user deposit addresses
# Use a secure value in production and rotate if compromised
THETA_MASTER_SEED=0xYOUR_MASTER_SEED_64_HEX
NEXT_PUBLIC_THETA_CHAIN_ID=365

# Single toggle to run without a database
# When true, the app avoids all Prisma/database operations and uses
# in-memory/demo data where needed. Twitter OAuth via NextAuth remains real.
NO_DATABASE=true
